---
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, albumId, title, artists, cover } = playlist;

const strIntlArtists = new Intl.ListFormat("en");
const strArtists = strIntlArtists.format(artists);
---

<div class="playlist-card p-4 rounded-lg overflow-hidden bg-[#181818]">
  <a href={`/playlist/${id}`} class="relative flex flex-col">
    <picture class="aspect-square max-w-full flex-none mb-4">
      <img
        src={cover}
        class="object-cover w-full h-full rounded-md"
        alt={`Cover of ${title} by ${strArtists}`}
      />
    </picture>

    <div class="flex flex-col gap-y-[2px] items-start">
      <div class="relative w-full max-w-full">
        <p class="text-txt-base pointer-events-none leading-normal truncate">
          {title}
        </p>
      </div>

      <div class="w-full max-w-full leading-tight">
        <span class="text-sm text-txt-subdued">{strArtists}</span>
      </div>
    </div>
  </a>
</div>
