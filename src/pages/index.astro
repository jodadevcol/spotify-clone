---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { playlists } from "@/lib/data";
import PlaylistLongCard from "@/components/PlaylistLongCard.astro";
import PlaylistSquareCard from "@/components/PlaylistSquareCard.astro";
---

<Layout title="Clone Spotify - Reproductor web: música para todos">
  <div class="relative min-h-screen bg-back-base z-10">
    <div class="header-spacer h-[64px] sticky top-0"></div>
    <!-- <PageHeader /> -->

    <div
      class="absolute w-full h-72 -mt-[64px] bg-essential-positive bg-gradient-to-t from-back-base to-black/60 -z-[1]"
    >
    </div>

    <div class="flex flex-col gap-y-6 w-full px-5">
      <!-- <Gretings /> -->
      <section class="mb-4">
        <h2 class="mb-4 text-4xl font-bold text-white">Buenos días</h2>

        <div class="grid grid-cols-2 gap-2">
          {
            playlists.map(
              (playlist) =>
                playlist.favourite && <PlaylistLongCard playlist={playlist} />,
            )
          }
        </div>
      </section>

      <section>
        <h3 class="mb-4 text-2xl font-bold text-white">Tu música</h3>

        <div class="grid grid-cols-4 gap-x-6">
          {
            playlists.map((playlist, index) =>
              index < 4 ? <PlaylistSquareCard playlist={playlist} /> : null,
            )
          }
        </div>
      </section>
    </div>
  </div>
</Layout>

<style is:inline></style>
